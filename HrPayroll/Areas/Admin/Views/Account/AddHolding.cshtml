
@{
    ViewData["Title"] = "AddHolding";
}
@using HrPayroll.Areas.Admin.Models
@model Holding
<div class="page-wrapper">
    <!-- content -->
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-7 col-md-12 col-sm-12 col-12">
                    <h5 class="text-uppercase"></h5>
                </div>
            </div>
        </div>
        <div class="page-content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <div class="page-title">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="page-title"><a style="color:chocolate; cursor:pointer;"></a> Add Holding</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <form class="row" method="post">
                                        <div asp-validation-summary="ModelOnly"></div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                                            <div class="form-group custom-mt-form-group">
                                                <input type="text" name="Name" id="HoldingName" asp-for="Name" />
                                                <label class="control-label" asp-for="Name">Holding Name</label><i class="bar"></i>
                                                <span asp-validation-for="Name"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="form-group text-center custom-mt-form-group">
                                                <button class="btn btn-primary mr-2" id="add" type="submit">Save</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped" style="color: orange; width: 70%; margin: auto;">
                            <thead>
                                <tr>
                                    <th class="col-md-2">Holding</th>
                                    <th class="col-md-9">Action</th>
                                </tr>
                            </thead>
                            <tbody id="del_hol">
                                @if ((List<Holding>)ViewBag.Holding != null)
                                {
                                    foreach (var elm in (List<Holding>)ViewBag.Holding)
                                    {
                                        <tr>
                                            <td class="name">@elm.Name</td>
                                            <td>
                                                <div class="dropdown dropdown-action">
                                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a class="dropdown-item delete" asp-controller="Account" asp-area="Admin" asp-action="DeleteHolding" asp-route-id="@elm.Id" title="Delete"><i class="fa fa-trash-o m-r-5"></i>Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

