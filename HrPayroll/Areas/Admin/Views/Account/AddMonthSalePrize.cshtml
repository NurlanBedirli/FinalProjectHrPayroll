@{
    ViewData["Title"] = "AddMonthSalePrize";
}
@using HrPayroll.Areas.Admin.Models
@using HrPayroll.Areas.Admin.ViewModel
@model MonthSale
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-7 col-md-12 col-sm-12 col-12">
                    <h5 class="text-uppercase"></h5>
                </div>
            </div>
        </div>
        <div class="page-content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <div class="page-title">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="page-title"><a style="color:chocolate; cursor:pointer;"></a> Add Month Sale</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <form class="row" method="post">
                                        <div asp-validation-summary="ModelOnly"></div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                                            <div class="form-group custom-mt-form-group">
                                                <select id="Holding">
                                                    @if ((List<Holding>)ViewBag.Holding != null)
                                                    {
                                                        foreach (var elm in (List<Holding>)ViewBag.Holding)
                                                        {
                                                            <option>@elm.Name</option>
                                                        }
                                                    }
                                                </select>
                                                <label class="control-label">Holding</label><i class="bar"></i>
                                            </div>
                                            <div class="form-group custom-mt-form-group">
                                                <select id="companyName"></select>
                                                <span></span>
                                                <label class="control-label">Company</label><i class="bar"></i>
                                            </div>
                                            <div class="form-group custom-mt-form-group">
                                                <select asp-for="EmporiumId" id="emporiaName"></select>
                                                <span asp-validation-for="EmporiumId"></span>
                                                <label class="control-label">Emporia</label><i class="bar"></i>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                                            <div class="form-group custom-mt-form-group">
                                                <input type="date" name="DateQuata" asp-for="DateQuata" />
                                                <label class="control-label" asp-for="DateQuata">Quata</label><i class="bar"></i>
                                                <span asp-validation-for="DateQuata"></span>
                                            </div>
                                            <div class="form-group custom-mt-form-group">
                                                <input type="number" name="Quata" asp-for="Quata" />
                                                <label class="control-label" asp-for="Quata">Quata</label><i class="bar"></i>
                                                <span asp-validation-for="Quata"></span>
                                            </div>
                                            <div class="form-group custom-mt-form-group">
                                                <input type="number" name="Prize" asp-for="Prize" />
                                                <label class="control-label" asp-for="Prize">Prize</label><i class="bar"></i>
                                                <span asp-validation-for="Prize"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="form-group text-center custom-mt-form-group">
                                                <button class="btn btn-primary mr-2" type="submit">Save</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped" style="color: orange; width: 70%; margin: auto;">
                            <thead>
                                <tr>
                                    <th>Holding</th>
                                    <th>Company</th>
                                    <th>Emporia</th>
                                    <th>Quata</th>
                                    <th>Date Quata</th>
                                    <th>Prize</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="del_hol">
                                @if ((List<MonthSaleModel>)ViewBag.MonthSale != null)
                                {
                                    foreach (var elm in (List<MonthSaleModel>)ViewBag.MonthSale)
                                    {
                                <tr>
                                    <td class="name">@elm.Holding</td>
                                    <td class="name">@elm.Company</td>
                                    <td class="name">@elm.Emporium</td>
                                    <td class="name">@elm.Date.ToString("dd.dd.yyyy")</td>
                                    <td class="name">@elm.Quata</td>
                                    <td class="name">@elm.Prize</td>
                                    <td>
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item delete" asp-controller="Account" asp-area="Admin" asp-action="MonthSaleDel" asp-route-id="@elm.Id" title="Delete"><i class="fa fa-trash-o m-r-5"></i>Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/company_emporium_position_add_change.js"></script>







